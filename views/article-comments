    <h2>Comments (<%= comments.size %>)</h2>
    <div class="content">
        <% WHILE (comment = comments.next) %>
        <div id="comment-<%= comment.number %>" class="comment">
            <% h.gravatar(comment.email) %>

            <span class="author"><%= h.comment_author(comment) %></span> says:
            <div class="meta">
                <%= h.date(comment.created) %>
            </div>

            <div class="content">
            <% comment.content | html %>
            </div>
        </div>
        <% END %>
    </div>
</div>
